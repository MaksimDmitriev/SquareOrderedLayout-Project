<?xml version="1.0" encoding="utf-8"?>

<ru.dmitriev.areaorderedlayout.AreaOrderedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/area_ordered_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:padding="5dp">

    <View
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="#9f0"
        android:padding="5dp" />

    <View
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="#f90"
        android:padding="5dp" />

    <View
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="#aaf"
        android:padding="5dp" />

    <View
        android:id="@+id/toggled_view"
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="#bcf"
        android:visibility="gone" />
</ru.dmitriev.areaorderedlayout.AreaOrderedLayout>

